@model IEnumerable<ISkillsMyApp.Models.Product>

<div>
    <table class="table table-striped">
        <tr>
            <th>
                Prodcut ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
        @{
            foreach (var pro in Model.ToList())
            {
                string productImage = @pro.Image;
                <tr>
                    <td>@pro.ProductID </td>
                    <td> @pro.ProductName</td>
                    <td><img src=productImage alt="problem in image loading" /></td>
                    @*<td> <img src="~/Images/999.png" />   </td>*@
                    <td>
                        <a href="/ItemDetail/Index/@pro.ProductID">Goto Prod Page</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
