@model ISkillsMyApp.Models.ShippingInfo
@{
    ViewBag.Title = "Shipping Info";
}

@using (@Html.BeginForm())
{
    @Html.ValidationSummary()
    <h3>Ship to:</h3>
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(x => x.Address, new { @class="form-group" })
    </div>
    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-group" })
    </div>
    <div class="form-group">
        <label>State</label>
        @Html.TextBoxFor(x => x.State, new { @class = "form-group" })
    </div>
    <div class="form-group">
        <label>Zip Code</label>
        @Html.TextBoxFor(x => x.Zip, new { @class = "form-group" })
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Next" />
    </div>
}

